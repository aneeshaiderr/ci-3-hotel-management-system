{% include 'dashboard/partial/header.twig' %}

{% block content %}
<div class="container d-flex justify-content-center align-items-center min-vh-100">

    {% if session.flashdata('succMsg') %}
        <div class="alert alert-success">
            {{ session.flashdata('succMsg') }}
        </div>
    {% endif %}

    <div class="col-md-6 col-lg-5">
        <div class="card shadow">
            <div class="card-body p-4">
                <h2 class="text-center mb-4 fw-bold text-primary">Signup</h2>

                <form method="post" action="{{ base_url('signup') }}">

                    <!-- Role Selection -->
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Signup as</label>

                        <div class="form-check">
                            <input
                                class="form-check-input"
                                type="radio"
                                name="role"
                                id="role_user"
                                value="user"
                                checked
                            >
                            <label class="form-check-label" for="role_user">Normal User</label>
                        </div>

                        <div class="form-check">
                            <input
                                class="form-check-input"
                                type="radio"
                                name="role"
                                id="role_staff"
                                value="staff"
                            >
                            <label class="form-check-label" for="role_staff">Staff</label>
                        </div>

                        {% if errors.role %}
                            <div class="text-danger small mt-1">{{ errors.role }}</div>
                        {% endif %}
                    </div>

                    <!-- First Name -->
                    <div class="mb-3">
                        <input type="text" name="first_name" class="form-control" placeholder="Enter your first name" value="{{ old.first_name|default('') }}">
                        {% if errors.first_name %}
                            <div class="text-danger small mt-1">{{ errors.first_name }}</div>
                        {% endif %}
                    </div>

                    <!-- Last Name -->
                    <div class="mb-3">
                        <input type="text" name="last_name" class="form-control" placeholder="Enter your last name" value="{{ old.last_name|default('') }}">
                        {% if errors.last_name %}
                            <div class="text-danger small mt-1">{{ errors.last_name }}</div>
                        {% endif %}
                    </div>

                    <!-- Email -->
                    <div class="mb-3">
                        <input type="email" name="email" class="form-control" placeholder="Enter your email" value="{{ old.email|default('') }}">
                        {% if errors.email %}
                            <div class="text-danger small mt-1">{{ errors.email }}</div>
                        {% endif %}
                    </div>

                    <!-- Contact -->
                    <div class="mb-3">
                        <input type="text" name="contact_no" class="form-control" placeholder="Enter your contact number" value="{{ old.contact_no|default('') }}">
                        {% if errors.contact_no %}
                            <div class="text-danger small mt-1">{{ errors.contact_no }}</div>
                        {% endif %}
                    </div>

                    <!-- Password -->
                    <div class="mb-3">
                        <input type="password" name="password" class="form-control" placeholder="Enter your password">
                        {% if errors.password %}
                            <div class="text-danger small mt-1">{{ errors.password }}</div>
                        {% endif %}
                    </div>

                    <!-- Submit -->
                    <div class="d-flex">
                        <button type="submit" class="btn btn-primary fw-bold w-100 text-white">
                            Signup
                        </button>
                    </div>

                </form>
            </div>

            <div class="card-footer text-center bg-light py-3">
                <p class="mb-0">
                    Already have an account?
                    <a href="{{ base_url('login') }}" class="text-primary fw-semibold">
                        Login now
                    </a>
                </p>
            </div>
        </div>
    </div>
</div>
{% endblock %}
