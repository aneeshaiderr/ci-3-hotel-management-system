{% set roleId   = session.role_id %}
{% set username = session.name %}
<aside id="sidebar" class="text-white vh-100 p-3">
	<div class="text-center mb-4">
		<h5 class="fw-bold">Hotel Reservation roleId:
			{{roleId}}</h5>
	</div>

	<div class="text-center mb-3">
		<img src="{{ base_url('assets_dashboard/dashboard/img/avatar.jpg') }}" class="rounded-circle img-fluid mb-2" style="width:80px;height:80px;">
		<div>{{ username }}</div>
		<small class="text-secondary">
			{% if roleId == 1 %}Super Admin
				{% elseif roleId == 2 %}Staff
				{% elseif roleId == 3 %}User
				{% else %}
			{% endif %}
		</small>
		<hr class="border-secondary">
	</div>

	<ul class="nav flex-column">
		{% set pagesList = [] %}

		{% if roleId == 1 %}
			{% set pagesList = ['analytics','setting','user','hotel','rooms','services','discount','reservation','payment','permission'] %}
		{% elseif roleId == 2 %}
			{% set pagesList = ['user','reservation','services','rooms','discount'] %}
		{% elseif roleId == 3 %}
			{% set pagesList = ['user','reservation'] %}
		{% else %}
			{% set pagesList = ['dashboard'] %}
		{% endif %}

		{% for page in pagesList %}
			<li class="nav-item">
				<a href="{{ base_url(page) }}" class="nav-link {{ current == page ? 'active bg-secondary text-white' : 'text-white' }}">
					{{ page|replace({'_':' '})|capitalize }}
				</a>
			</li>
		{% endfor %}

		{% if roleId == null %}
			<li class="nav-item">
				<a href="{{ base_url('login') }}" class="nav-link text-white">Login</a>
			</li>
		{% endif %}
	</ul>
</aside>
