{% extends 'dashboard/layout.twig' %}

{% block content %}
<div class="main-content d-flex flex-column min-vh-100">
    <div class="container py-5">
        <h5 class="fw-bold mb-2 ps-2">Discount</h5>

        <!-- Create Button -->
        <div class="mb-4">
            <a href="{{ base_url('discount/create') }}" class="btn btn-sm btn-success">
                + Create Discount
            </a>
        </div>

        <div class="card card-custom w-100">
            <div class="card-body">
                <h6 class="mb-3 fw-bold">Discount List</h6>

                <table id="example" class="table table-striped table-bordered align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Discount Type</th>
                            <th>Dis_Name</th>
                            <th>Value</th>
                            <th>Start Date</th>
                            <th>End Date</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% if discounts is not empty %}
                            {% for discount in discounts %}
                                <tr>
                                    <td>{{ discount.id }}</td>
                                    <td>{{ discount.discount_type|default('') }}</td>
                                    <td>{{ discount.discount_name|default('') }}</td>
                                    <td>{{ discount.value|default('') }}</td>
                                    <td>{{ discount.start_date|default('') }}</td>
                                    <td>{{ discount.end_date|default('') }}</td>
                                    <td>
                                        {% set st = discount.status|default('') %}
                                        {% if st|lower == 'active' %}
                                            <span class="badge bg-success">Active</span>
                                        {% elseif st|lower == 'expired' %}
                                            <span class="badge bg-danger">Expired</span>
                                        {% else %}
                                            <span class="badge bg-warning text-dark">{{ st ?: 'Unknown' }}</span>
                                        {% endif %}
                                    </td>
                                    <td>

                                      <div class="d-flex align-items-center gap-2">
                                   <a href="{{ base_url('discount/edit/' ~ discount.id) }}"
                              class="btn btn-sm btn-primary py-1 px-3">
                                     View
                                       </a>

                                        </div>

                                            {% set permissions = [] %}
                                            {% if session.permissions is defined %}
                                                {% for p in session.permissions %}
                                                    {% set permissions = permissions|merge([p.name]) %}
                                                {% endfor %}
                                            {% endif %}

                                            {% if session.user.role_name == 'superadmin' or 'delete_discount' in permissions %}
                                                <form action="{{ base_url('discount/delete') }}" class="m-0">
                                                    <input type="hidden" name="id" value="{{ discount.id }}">
                                                    <button type="submit" class="btn btn-sm btn-danger py-1 px-3">Delete</button>
                                                </form>
                                            {% endif %}
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        {% else %}
                            <tr>
                                <td colspan="8" class="text-center text-muted">No discounts found.</td>
                            </tr>
                        {% endif %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}
