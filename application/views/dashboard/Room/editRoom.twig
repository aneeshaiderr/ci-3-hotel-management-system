{% extends 'dashboard/layout.twig' %}

{% block content %}
<div class="main-content d-flex flex-column min-vh-100">
  <div class="container py-5">
    <main>
      <div class="mx-auto max-w-4xl py-7 px-7">
        <h5 class="fw-bold mb-4">Edit Room</h5>

        <form method="POST" action="{{ base_url('rooms/update') }}">
            <input type="hidden" name="id" value="{{ room.id|default('') }}">

            <!-- Room Number -->
            <div class="mb-4">
                <label for="room_number">Room Number</label>
                <input type="number" id="room_number" name="room_number"
                       value="{{ room.room_number|default('') }}" required class="form-control">
            </div>

            <!-- Floor -->
            <div class="mb-4">
                <label for="floor">Floor</label>
                <input type="number" id="floor" name="floor"
                       value="{{ room.floor|default('') }}" required class="form-control">
            </div>

            <!-- Room Bed -->
            <div class="mb-4">
                <label for="beds">Room Bed</label>
                <input type="number" id="beds" name="beds"
                       value="{{ room.beds|default('') }}" required class="form-control">
            </div>

            <!-- Max Guest -->
            <div class="mb-4">
                <label for="max_guests">Max Guest</label>
                <input type="number" id="max_guests" name="max_guests"
                       value="{{ room.max_guests|default('') }}" required class="form-control">
            </div>

            <!-- Status -->
            <div class="mb-4">
                <label for="status">Status</label>
                <select id="status" name="status" required class="form-control">
                    <option value="available" {% if room.status == 'available' %}selected{% endif %}>Available</option>
                    <option value="booked" {% if room.status == 'booked' %}selected{% endif %}>Booked</option>
                    <option value="maintenance" {% if room.status == 'maintenance' %}selected{% endif %}>Maintenance</option>
                </select>
            </div>

            <!-- Buttons -->
            <div class="mt-6 flex items-center justify-end gap-x-4">
                <a href="{{ base_url('rooms') }}" class="btn btn-secondary btn-sm">Cancel</a>
                <button type="submit"
                        style="background-color:#16a34a; color:white; padding:8px 16px; border-radius:6px; border:none;"
                        onmouseover="this.style.backgroundColor='#15803d'"
                        onmouseout="this.style.backgroundColor='#16a34a'">
                    Update
                </button>
            </div>
        </form>
      </div>
    </main>
  </div>
</div>
{% endblock %}
